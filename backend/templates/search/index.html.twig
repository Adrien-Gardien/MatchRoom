{% extends 'base.html.twig' %}

{% block title %}Search index{% endblock %}

{% block body %}
    <h1>Search index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Criteria</th>
                <th>SearchDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for search in searches %}
            <tr>
                <td>{{ search.id }}</td>
                <td>{{ search.criteria }}</td>
                <td>{{ search.searchDate ? search.searchDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_search_show', {'id': search.id}) }}">show</a>
                    <a href="{{ path('app_search_edit', {'id': search.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_search_new') }}">Create new</a>
{% endblock %}
