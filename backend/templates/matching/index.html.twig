{% extends 'base.html.twig' %}

{% block title %}Matching index{% endblock %}

{% block body %}
    <h1>Matching index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>MatchDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for matching in matchings %}
            <tr>
                <td>{{ matching.id }}</td>
                <td>{{ matching.type ? 'Yes' : 'No' }}</td>
                <td>{{ matching.matchDate ? matching.matchDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_matching_show', {'id': matching.id}) }}">show</a>
                    <a href="{{ path('app_matching_edit', {'id': matching.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_matching_new') }}">Create new</a>
{% endblock %}
