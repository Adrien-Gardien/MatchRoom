{% extends 'base.html.twig' %}

{% block title %}Matching{% endblock %}

{% block body %}
    <h1>Matching</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ matching.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ matching.type ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>MatchDate</th>
                <td>{{ matching.matchDate ? matching.matchDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_matching_index') }}">back to list</a>

    <a href="{{ path('app_matching_edit', {'id': matching.id}) }}">edit</a>

    {{ include('matching/_delete_form.html.twig') }}
{% endblock %}
