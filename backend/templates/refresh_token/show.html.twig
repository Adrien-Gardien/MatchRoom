{% extends 'base.html.twig' %}

{% block title %}RefreshToken{% endblock %}

{% block body %}
    <h1>RefreshToken</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ refresh_token.id }}</td>
            </tr>
            <tr>
                <th>Token</th>
                <td>{{ refresh_token.token }}</td>
            </tr>
            <tr>
                <th>ExpiresAt</th>
                <td>{{ refresh_token.expiresAt ? refresh_token.expiresAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_refresh_token_index') }}">back to list</a>

    <a href="{{ path('app_refresh_token_edit', {'id': refresh_token.id}) }}">edit</a>

    {{ include('refresh_token/_delete_form.html.twig') }}
{% endblock %}
