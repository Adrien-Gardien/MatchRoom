{% extends 'base.html.twig' %}

{% block title %}RefreshToken index{% endblock %}

{% block body %}
    <h1>RefreshToken index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Token</th>
                <th>ExpiresAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for refresh_token in refresh_tokens %}
            <tr>
                <td>{{ refresh_token.id }}</td>
                <td>{{ refresh_token.token }}</td>
                <td>{{ refresh_token.expiresAt ? refresh_token.expiresAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_refresh_token_show', {'id': refresh_token.id}) }}">show</a>
                    <a href="{{ path('app_refresh_token_edit', {'id': refresh_token.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_refresh_token_new') }}">Create new</a>
{% endblock %}
